<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/charelements_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".CharElementsQuizActivity">


    //change the ids of the layout to the correct ids I CREATED SO
    //android:layout_alignTop="@+id/score" should be charelementscore

    <TextView
        android:id="@+id/charelementsscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-25dp"
        android:gravity="top"
        android:text="TextView"
        android:textSize="18sp"
        tools:text="Score: 12/15" />

    <TextView
        android:id="@+id/charelementsnumQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/charelementsscore"
        android:gravity="top"
        android:text="TextView"
        android:textSize="18sp"
        tools:text="Q: 12/15" />

    <TextView
        android:id="@+id/charelementstextView_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="TextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        tools:text="10:00" />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/charelementsprogress_countdown"
        android:minWidth="75dp"
        android:minHeight="72dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/charelementstextView_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-24dp"
        style="@style/Widget.MaterialProgressBar.ProgressBar"
        />
    <Button
        android:id="@+id/charelementsanswer4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/charelementsanswer2"
        android:layout_centerHorizontal="true"
        android:background="@color/lightblue"
        android:textSize="18sp"
        android:text="Button" />

    <TextView
        android:id="@+id/charelementsquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Balance the following equation: 2Al + "
        android:textSize="24dp" />

    <Button
        android:id="@+id/charelementsanswer2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:background="@color/lightgreen"
        android:textSize="18sp"
        android:text="Button" />

    <Button
        android:id="@+id/charelementsanswer1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/charelementsanswer4"
        android:layout_centerHorizontal="true"
        android:background="@color/lightpink"
        android:textSize="18sp"
        android:text="Button" />

    <Button
        android:id="@+id/charelementsanswer3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/lightpurple"
        android:textSize="18sp"
        android:text="Button" />

</RelativeLayout>